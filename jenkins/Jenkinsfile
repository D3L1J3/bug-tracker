pipeline {
  agent any  // Run on any available Jenkins agent

  stages {
    stage('Execute Unit Tests') {
      parallel {  // Run backend and frontend tests in parallel

        // -------------------- Backend Tests --------------------
        stage('Unit Tests - Backend') {
          agent {
            docker {
              image 'snakee/golang-junit:1.21'  // Docker image with Go and junit reporter
              reuseNode true  // Reuse Jenkins node workspace
            }
          }
          steps {
            dir('bugtracker-backend') {
              sh '''
                # Configure Go build caches inside the workspace
                export GOCACHE="$PWD/.cache/go-build"
                export GOMODCACHE="$PWD/.cache/go-mod"
                mkdir -p "$GOCACHE" "$GOMODCACHE"

                # Run Go tests and generate JUnit XML report
                go test -v ./... 2>&1 | go-junit-report > test-results.xml

                # Generate code coverage report in HTML format
                go test -coverprofile coverage.out -covermode=atomic ./...
                go tool cover -html=coverage.out -o coverage.html

                # Move coverage report into reports folder for Jenkins
                mkdir -p reports
                mv coverage.html reports/

                # List files to confirm they exist
                ls -la
                ls -la reports || true
              '''
            }
          }
          post {
            always {
              // Publish backend JUnit test results
              junit 'bugtracker-backend/test-results.xml'

              // Publish backend coverage HTML report
              publishHTML target: [
                reportDir: 'bugtracker-backend/reports',
                reportFiles: 'coverage.html',
                reportName: 'Backend Coverage Report'
              ]
            }
          }
        }

        // -------------------- Frontend Tests --------------------
        stage('Unit Tests - Frontend') {
          agent {
            docker {
              image 'node:20-alpine'  // Lightweight Node.js image for frontend tests
              reuseNode true
            }
          }
          steps {
            dir('bugtracker-frontend') {
              sh '''
                # Install dependencies
                npm ci

                # Run Jest tests and generate coverage report
                npm test

                # Move coverage output to reports directory
                mkdir -p reports
                mv coverage reports/
              '''
            }
          }
          post {
            always {
              // Publish frontend JUnit test results
              junit 'bugtracker-frontend/test-results.xml'

              // Publish frontend coverage HTML report
              publishHTML target: [
                reportDir: 'bugtracker-frontend/reports/coverage',
                reportFiles: 'index.html',
                reportName: 'Frontend Coverage Report'
              ]
            }
          }
        }
      }
    }
    stage('Launch Application') {
      agent {
        docker {
          image 'docker:27.5.1'
          reuseNode true
          args '-v /var/run/docker.sock:/var/run/docker.sock -u 0'  // Mount Docker socket for DinD
        }
      }
      steps {
        sh 'docker compose up --build -d' // Build and launch application in detached mode
      }
    }

    stage('Api Tests') {
      agent {
        docker {
          image 'mcr.microsoft.com/playwright:v1.50.0-jammy'  // Playwright image for API tests
          reuseNode true
          args '-u 0 --network=host'  // Run as root and use host network
        }
      }
      steps {
        dir('test-api') {
          sh 'npx wait-port http://localhost:8080/api/health -t 30000'  // Wait for backend to be ready
          
          sh 'npm ci'  // Install test dependencies
          sh 'npx playwright test'  // Run Playwright tests
        }
      }
      post {
        always {
          // Publish Playwright test results
          junit 'test-api/test-results/results.xml'

          // Publish Playwright HTML report
          publishHTML target: [
            reportDir: 'test-api/playwright-report',
            reportFiles: 'index.html',
            reportName: 'Playwright Test Report'
          ]
        }
      }
  }

  // -------------------- Cleanup --------------------
  post {
    always {
      // Clean workspace after build completes
      cleanWs()
    }
  }
}
